{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Flarelette JWT Profile",
  "type": "object",
  "required": [
    "alg",
    "aud",
    "iss"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "alg": {
      "type": "string",
      "enum": [
        "HS512","EDDSA"
      ]
    },
    "aud": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      ]
    },
    "iss": {
      "type": "string",
      "minLength": 1
    },
    "leeway_seconds": {
      "type": "integer",
      "minimum": 0,
      "default": 90
    }
  },
  "additionalProperties": true
}